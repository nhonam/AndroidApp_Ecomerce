<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <TextView
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:text="Quản Lí Sản Phẩm"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>
    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seacrch_SV"
        />

    <ListView
        android:id="@+id/listviewManagerProduct"
        android:layout_width="fill_parent"
        android:layout_height="600dp"
        android:divider="#FF3D00"
        android:dividerHeight="2dp"
        android:listSelector="#818080"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <Button
            android:text="Thêm"
            android:id="@+id/addItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Chon Het"
            android:id="@+id/btnCheckAll"
         />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Bỏ chọn hết"
            android:id="@+id/btnUnCheckAll"
          />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:id="@+id/btnXoaDuLieu"/>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Xóa"
            android:id="@+id/btn_Thoat"/>

    </LinearLayout>



</LinearLayout>