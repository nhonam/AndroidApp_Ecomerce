<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ImageView
            android:src="@drawable/otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>
    </LinearLayout>

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"

            android:textSize="40dp"
            android:text="Xác Thực OTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Nhập vào mã số nhận được trong Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="nhonamstg@gmail.com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textSize="24dp"
                android:textStyle="bold"
                android:maxLength="1"
                android:id="@+id/one"
                android:layout_width="40dp"
                android:layout_height="45dp"/>

            <EditText
                android:textSize="24dp"
                android:textStyle="bold"
                android:maxLength="1"
                android:id="@+id/two"
                android:layout_width="40dp"
                android:layout_height="45dp"/>

            <EditText
                android:textSize="24dp"
                android:textStyle="bold"
                android:maxLength="1"
                android:id="@+id/three"
                android:layout_width="40dp"
                android:layout_height="45dp"/>

            <EditText
                android:textSize="24dp"
                android:textStyle="bold"
                android:maxLength="1"
                android:id="@+id/four"
                android:layout_width="40dp"
                android:layout_height="45dp"/>

            <EditText
                android:textSize="24dp"
                android:textStyle="bold"
                android:maxLength="1"
                android:id="@+id/five"
                android:layout_width="40dp"
                android:layout_height="45dp"/>

            <EditText
                android:textSize="24dp"
                android:textStyle="bold"
                android:maxLength="1"
                android:id="@+id/six"
                android:layout_width="40dp"
                android:layout_height="45dp"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnVertifyOTP"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_primary"
        android:text="Xác Nhận OTP"
        android:textAllCaps="false"
        android:textSize="20dp"></androidx.appcompat.widget.AppCompatButton>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa nhận được OTP ? "></TextView>

        <TextView
            android:id="@+id/resentOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Gửi lại OTP"
            android:textColor="#F85F53"
            android:textStyle="bold"></TextView>
    </LinearLayout>

</LinearLayout>