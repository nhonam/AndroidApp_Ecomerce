<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center">

        <CheckBox
            android:id="@+id/checkCart"
            android:layout_width="32dp"
            android:layout_height="wrap_content" />
        />

        <ImageView
            android:id="@+id/imgCart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/cart_product" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_store" />

                <TextView
                    android:id="@+id/nameShopCart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"

                    android:text="Trần Nhật Duy"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:src="@drawable/baseline_chevron_right_24" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="19dp">

                <TextView
                    android:id="@+id/nameProductCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Tee basic ss1 CREWZ áo thun tay lỡ unisex Local Brand -Lamo Store(V427)" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape_outline"
                android:padding="3dp"
                android:text="Miễn phí 7 ngày đổi trả hàng"
                android:textColor="#F80000"
                android:textSize="11dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:src="@drawable/freeship" />

            <TextView
                android:id="@+id/priceCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"

                android:text="399.000đ"
                android:textColor="#f57224"
                android:textSize="18dp" />


            <LinearLayout
                android:layout_width="79dp"
                android:layout_height="32dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="18dp"

                    android:gravity="center"
                    android:text="-" />

                <EditText
                    android:id="@+id/quantityCart"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"

                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="1"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="18dp"

                    android:gravity="center"
                    android:text="+" />

            </LinearLayout>

            <TextView
                android:layout_width="195dp"
                android:layout_height="18dp"
                android:id="@+id/Delete"
                android:gravity="center"
                android:text="Xóa sản phẩm" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>