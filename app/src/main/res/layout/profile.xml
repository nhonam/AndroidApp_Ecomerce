<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_store" />

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/background_bule"

                >


                <TextView
                    android:id="@+id/btnManagerProduct"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Quản Lí Sản Phẩm"
                    android:textColor="#E6000000"
                    android:textStyle="bold"></TextView>

            </RelativeLayout>



            <ImageView
                android:id="@+id/setting"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:padding="1dp"
                android:src="@drawable/ic_setting" />


        </RelativeLayout>

    </LinearLayout>

    <ScrollView

        android:layout_marginTop="10dp"
        android:id="@+id/bgProfile"
        android:background="@drawable/a"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout

                android:id="@+id/img_Profile"
                android:layout_width="match_parent"
                android:layout_height="250dp"

             >

                <include

                    layout="@layout/item_image"
                    android:layout_width="match_parent"
                    android:layout_height="278dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card_white_22_background"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    style="@style/NunotoTextViewBoldStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tài khoản"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_people" />

                    <TextView
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        android:text="Họ tên"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/fullname_Pf"
                        style="@style/NunotoTextViewBoldStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:text="Theo dõi giấc ngủ"
                        android:textColor="#7B6F72"/>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayout_profilefragment_item_sleep_tracker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_email" />

                    <TextView
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        android:text="Email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/emailProfile"
                        style="@style/NunotoTextViewBoldStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:text="Theo dõi giấc ngủ"
                        android:textColor="#7B6F72"/>



                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearlayout_profilefragment_item_exercise_suggestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_phone" />
                    <TextView
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        android:text="Số điện thoại"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/phoneProfile"

                        style="@style/NunotoTextViewBoldStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Bài tập đề xuất"
                        android:layout_marginLeft="16dp"
                        android:textColor="#7B6F72">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayout_profilefragment_item_progress_tracker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_adress" />
                    <TextView
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        android:text="Địa chỉ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/adressProfile"
                        style="@style/NunotoTextViewBoldStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:gravity="center_vertical"
                        android:text="Theo dõi tiến trình"
                        android:textColor="#7B6F72">

                    </TextView>


                </LinearLayout>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_date" />
                    <TextView
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        android:text="Ngày sinh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/birthdayProfile"

                        style="@style/NunotoTextViewBoldStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:text="30-03-2001"
                        android:textColor="#7B6F72">

                    </TextView>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_white_22_background"
                android:padding="24dp">

                <LinearLayout

                    android:id="@+id/updateInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_setting" />


                    <TextView

                        style="@style/NunotoTextViewBoldStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Chỉnh sửa thông tin cá nhân"
                        android:layout_marginLeft="16dp"
                        android:textColor="#7B6F72">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_white_22_background"
                android:padding="24dp">

                <LinearLayout
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_logout_24" />

                    <TextView


                        style="@style/NunotoTextViewBoldStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Đăng xuất"
                        android:layout_marginLeft="16dp"
                        android:textColor="#7B6F72">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>